<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/clackson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/clackson" />

    <RelativeLayout
        android:id="@+id/controles_movimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <Button
            android:id="@+id/adelante_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/adelate" />

        <Button
            android:id="@+id/izq_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/adelante_btn"
            android:background="@drawable/izquierda" />

        <ImageView
            android:id="@+id/blank"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/adelante_btn"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/izq_btn"
            android:background="@drawable/blank"
            android:contentDescription="@string/cD_blank" />

        <Button
            android:id="@+id/der_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/adelante_btn"
            android:layout_toRightOf="@id/blank"
            android:background="@drawable/derecha" />

        <Button
            android:id="@+id/atras_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/blank"
            android:layout_toLeftOf="@+id/der_btn"
            android:background="@drawable/atras" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/controles_pinza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <Button
            android:id="@+id/abre_pinza_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/abrirpinza" />

        <Button
            android:id="@+id/cerrar_pinza_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/abre_pinza_btn"
            android:background="@drawable/cerrarpinza" />

        <Button
            android:id="@+id/stop_btn"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_below="@id/cerrar_pinza_btn"
            android:background="@drawable/stop" />
    </RelativeLayout>

</RelativeLayout>