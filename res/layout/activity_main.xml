<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/boton_manual"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/manual"
        android:onClick="manual"
        android:padding="@dimen/padding_medium"
        tools:context=".MainActivity" />

    <Button
        android:id="@+id/boton_auto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/boton_manual"
        android:background="@drawable/automatico"
        android:onClick="automatico"
        tools:context=".MainActivity" />

</RelativeLayout>